---
import GdgSucreLogo from './logos/GDGSucreLogo.astro'
import SocialIcons from './SocialIcons.astro'
---

<meta name='viewport' content='width=device-width, initial-scale=1.0' />
<footer class='relative pt-4 md:pt-8 bg-gray'>
  <img
    src='https://io.google/2024/app/images/io24-see-you-next-year.svg'
    class='w-full object-cover'
  />

  <div class='bg-gray'>
    <div class='mx-auto max-w-screen-2xl p-4 py-6 lg:py-8'>
      <div class='flex space-y-4 flex-col lg:flex-row lg:space-y-0 lg:text-lg font-medium'>
        <GdgSucreLogo />

        <a
          href='https://www.gdgsucre.com/eventos-pasados/'
          target='_blank'
          class='hover:text-blue lg:ml-8 mr-auto'
        >
          Eventos Pasados
        </a>

        <SocialIcons />
      </div>
    </div>
  </div>
</footer>
