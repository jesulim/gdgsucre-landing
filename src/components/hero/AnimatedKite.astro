---
import { Image } from 'astro:assets'

import kite from '../../assets/drawings/kite.png'
---

<Image
  src={kite}
  alt='kite'
  class='kite mt-2 mr-2 sm:ml-8 lg:ml-20'
/>

<style>
.kite {
    animation: dibujo4 4s infinite;
    filter: grayscale(100%);
    opacity: 0.5;
    position: absolute;
    top: 40%;
    right: 1%;
    z-index: 2;
    width: 30%;
    height: auto;
}

@keyframes dibujo4 {
    0%, 15% { transform: translate(0, 0) rotate(0deg) rotate(-50deg) scaleX(-1); }
    16%, 30% { transform: translate(-2px, 1px) rotate(-4deg) rotate(-50deg) scaleX(-1); }
    31%, 45% { transform: translate(1px, -3px) rotate(3deg) rotate(-50deg) scaleX(-1); }
    46%, 60% { transform: translate(3px, 2px) rotate(-2deg) rotate(-50deg) scaleX(-1); }
    61%, 75% { transform: translate(-1px, -2px) rotate(1deg) rotate(-50deg) scaleX(-1); }
    76%, 90% { transform: translate(-3px, 1px) rotate(0deg) rotate(-50deg) scaleX(-1); }
    91%, 100% { transform: translate(2px, -1px) rotate(-1deg) rotate(-50deg) scaleX(-1); }
}

img {
    display: none;
}

@media only screen and (max-width: 600px) {
    img {
        display: block;
    }
}
</style>
