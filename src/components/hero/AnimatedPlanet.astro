---
import { Image } from 'astro:assets'

import planet from '../../assets/drawings/planet.png'
---

<Image
  src={planet}
  alt='planet'
  class='planet mt-2 mr-2 sm:ml-8 lg:ml-20'
/>

<style>
.planet {
    animation: dibujo4 4s infinite;
    position: absolute;
    top: 20%;
    left: 20%;
    z-index: 2;
}

@keyframes dibujo4 {
    0%, 15% { transform: translate(0, 0) rotate(0deg); }
    16%, 30% { transform: translate(-2px, 1px) rotate(-4deg); }
    31%, 45% { transform: translate(1px, -3px) rotate(3deg); }
    46%, 60% { transform: translate(3px, 2px) rotate(-2deg); }
    61%, 75% { transform: translate(-1px, -2px) rotate(1deg); }
    76%, 90% { transform: translate(-3px, 1px) rotate(0deg); }
    91%, 100% { transform: translate(2px, -1px) rotate(-1deg); }
}
</style>
