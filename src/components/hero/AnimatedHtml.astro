---
import { Image } from 'astro:assets'
import html from '../../assets/drawings/html.png'

const { class: styles } = Astro.props;
---

<Image
  src={html}
  alt='html'
  class={`html mt-2 mr-2 sm:ml-8 lg:ml-20 ${styles}`}
/>

<style>
    .html {
        opacity: 0.4;
        position: fixed;
        z-index: 2;
    }

    @keyframes htmlAnimation {
        0%, 15% { transform: translate(0, 0) rotate(0deg); }
        16%, 30% { transform: translate(2px, 1px) rotate(8deg); }
        31%, 45% { transform: translate(-2px, -1px) rotate(-6deg); }
        46%, 60% { transform: translate(-1px, 2px) rotate(4deg); }
        61%, 75% { transform: translate(1px, -2px) rotate(-8deg); }
        76%, 90% { transform: translate(3px, -1px) rotate(6deg); }
        91%, 100% { transform: translate(-3px, 1px) rotate(-6deg); }
    }

    @media only screen and (min-width: 600px) {
        .html {
            animation: htmlAnimation 7s infinite;
        }
    }
</style>
