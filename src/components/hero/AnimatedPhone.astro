---
import { Image } from 'astro:assets'

import phone from '../../assets/drawings/phone.png'
---

<Image
  src={phone}
  alt='phone'
  class='phone mt-2 mr-2 sm:ml-8 lg:ml-20'
/>

<style>
.phone {
    animation: dibujo3 4s infinite;
    filter: grayscale(100%);
    position: absolute;
    top: 60%;
    left: 15%;
    z-index: 2;
}

@keyframes dibujo3 {
    0%, 15% { transform: translate(0, 0) rotate(0deg); }
    16%, 30% { transform: translate(2px, -1px) rotate(-8deg); }
    31%, 45% { transform: translate(-1px, 3px) rotate(9deg); }
    46%, 60% { transform: translate(-2px, -2px) rotate(-7deg); }
    61%, 75% { transform: translate(3px, 1px) rotate(6deg); }
    76%, 90% { transform: translate(-3px, -1px) rotate(-5deg); }
    91%, 100% { transform: translate(1px, 2px) rotate(4deg); }
}
</style>
