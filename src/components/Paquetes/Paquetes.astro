---
import 'swiper/css'
import 'swiper/css/effect-cards'

import SectionTitle from '../SectionTitle.astro'
import PaqueteCard from './PaqueteCard.astro'

---

<SectionTitle id='paquetes' title='Paquetes' />
<div class='overflow-hidden'>
  <div class='swiper overflow-hidden w-2/3 sm:w-1/2 lg:w-1/3 xl:w-1/4'>
    <div class='swiper-wrapper'>
      <div class='swiper-slide'>
        <PaqueteCard title='Flutter' color='bg-blue' price='30' img='flutter' />
      </div>
      <div class='swiper-slide'>
        <PaqueteCard
          title='Tensorflow'
          color='bg-orange-400'
          price='55'
          items={['Gorra']}
          img='tensorflow'
        />
      </div>
      <div class='swiper-slide'>
        <PaqueteCard
          title='Angular'
          color='bg-red'
          price='80'
          items={['Gorra', 'Tomatodo']}
          img='angular'
        />
      </div>
      <div class='swiper-slide'>
        <PaqueteCard
          title='Firebase'
          color='bg-yellow'
          price='130'
          img='firebase'
          items={['Gorra', 'Tomatodo', 'Polera']}
          soldOut={true}
        />
      </div>
    </div>

    <div class='flex'>
      <a
        href='https://b.link/PaquetesGoogleIOSucre'
        class='uppercase mx-auto mt-6 text-2xl text-yellow hover:underline'
        target='_blank'
        rel='noopener noreferrer'
      >
        Obt√©n tu paquete
      </a>
    </div>

    <script>
      import Swiper from 'swiper/bundle'

      new Swiper('.swiper', {
        autoplay: {
          delay: 3000,
          disableOnInteraction: true
        },
        effect: 'cards',
        grabCursor: true
      })
    </script>
  </div>
</div>
