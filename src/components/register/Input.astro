---
const { title, name, subtitle, ...rest } = Astro.props
---

<div class='my-4'>
  <label for={name} class='block font-medium'>{title}</label>
  {subtitle && <p class='text-sm'>{subtitle}</p>}
  <input
    class='mt-2 w-full border border-black bg-white p-2 focus:ring-0 disabled:bg-gray dark:border-white dark:bg-black'
    id={name}
    name={name}
    {...rest}
  />
</div>
