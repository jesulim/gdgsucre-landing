---
import { actions } from 'astro:actions'

const { email, uid } = Astro.props
---

<div class='max-w-screen-sm mx-auto px-4 space-y-4 flex flex-col'>
  <h1 class='font-bold text-2xl md:text-4xl'>Regístrate al evento</h1>

  <form method='POST' action={actions.register} class='space-y-4'>
    <input type='hidden' id='uid' name='uid' value={uid} />
    <div class='space-y-2'>
      <label for='email' class='block font-medium'>Email</label>
      <input
        class='rounded-lg bg-white border-black border p-2 w-full focus:ring-0 dark:bg-black dark:border-white'
        type='email'
        name='email'
        id='email'
        value={email}
        autocomplete='email'
        required
      />
    </div>

    <div class='space-y-2'>
      <label for='firstname' class='block'>Nombre(s)</label>
      <input
        class='rounded-lg bg-white border-black border p-2 w-full focus:ring-0 dark:bg-black dark:border-white'
        id='firstname'
        name='firstname'
        required
      />
    </div>

    <div class='space-y-2'>
      <label for='lastname' class='block'>Apellido(s)</label>
      <input
        class='rounded-lg bg-white border-black border p-2 w-full focus:ring-0 dark:bg-black dark:border-white'
        id='lastname'
        name='lastname'
        required
      />
    </div>

    <div class='space-y-2'>
      <label for='phone' class='block font-medium'>Número de teléfono</label>
      <input
        class='rounded-lg bg-white border-black border p-2 w-full focus:ring-0 dark:bg-black dark:border-white'
        id='phone'
        name='phone'
        required
      />
    </div>

    <div class='space-y-2'>
      <label for='dietaryRestriction' class='block font-medium'
        >(Opcional) ¿Tienes alguna alergia o restricción alimentaria?</label
      >
      <textarea
        class='rounded-lg bg-white border-black border p-2 w-full focus:ring-0 dark:bg-black dark:border-white'
        id='dietaryRestriction'
        name='dietaryRestriction'
      >
      </textarea>
    </div>

    <button
      class='w-full bg-blue text-white rounded-lg p-2 font-medium'
      type='submit'
    >
      Regístrate
    </button>
  </form>
</div>
