<SectionTitle id='sponsors' title='Sponsors' />
<div class='bg-sponsors-bg mt-10 bg-yellow-orange border-4 dark:border-black'>
  <div 
    class='max-w-screen-lg p-8 mx-auto grid gap-10 sm:grid-cols-2 md:grid-cols-5'
  >
    {
      sponsors.map((sponsor, index) => (
        <div class={`flex justify-center items-center p-5 border-4 rounded-[2px] bg-white dark:border-black
          transform transition-transform duration-200 hover:scale-105 hover:shadow-lg
          ${index === 0 ? 'sm:col-span-1 md:sm:col-span-2 sm:row-span-1 md:sm:row-span-2' : ''} 
          ${index === 1 ? 'col-span-1 row-span-1' : ''} 
          ${index === 2 ? 'col-span-2 row-span-1' : ''} 
          ${index === 3 ? 'sm:col-span-1 md:col-span-2 row-span-1' : ''} 
          ${index === 4 ? 'col-span-1 row-span-1' : ''} 
          ${index === 5 ? 'col-span-1 row-span-1' : ''}`}>
          <a href={sponsor.url} target='_blank'>
            <Image src={sponsor.logo} alt={sponsor.name} class={`${sponsor.height} object-contain`} />
          </a>
        </div>
      ))
    }
  </div>
</div>
