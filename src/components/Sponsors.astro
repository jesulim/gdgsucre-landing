import jetBrains from '../assets/sponsors/jetbrains.svg'
import jala from '../assets/sponsors/jala.png'
import dh from '../assets/sponsors/dh.png'
import delve from '../assets/sponsors/delve.jpg'


const sponsors = [
  {
    name: 'Digital Harbor',
    logo: dh,
    url: '',
    height: 'sm:h-32 md:h-48'
  },
  {
    name: '10minds',
    logo: tenMinds,
    url: 'https://10minds.org/',
    height: 'sm:h-16 md:h-24'
  },
  {
    name: 'JetBrains',
    logo: jetBrains,
    url: '',
    height: 'sm:h-16 md:h-24'
  },
  {
    name: 'Jala University',
    logo: jala,
    url: '',
    height: 'sm:h-16 md:h-24'
  },
  {
    name: 'Delve',
    logo: delve,
    url: '',
    height: 'sm:h-16 md:h-24'
  }
]
