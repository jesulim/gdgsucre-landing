---
import speakersData from '../../data/speakers.json'
import SectionTitle from '@components/SectionTitle.astro'
import { SpeakerCard } from './SpeakerCard.tsx'
---

<div class='mx-auto my-2 max-w-screen-lg px-4 md:my-8'>
  <SectionTitle id='speakers' title='Speakers' />
  <div
    class='group pointer-events-none mt-2 grid grid-cols-2 gap-4 sm:mt-4 sm:grid-cols-2 md:grid-cols-3 md:gap-8'
  >
    {speakersData.map((data, i) => <SpeakerCard id={i} {...data} client:visible />)}
  </div>
</div>
