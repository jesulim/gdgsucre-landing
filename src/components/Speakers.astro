---
import SectionTitle from './SectionTitle.astro'
import speakersData from '../data/speakers.json'
import { SpeakerCard } from './SpeakerCard.tsx'
---

<SectionTitle id='speakers' title='Speakers' />
<div class='mx-auto my-8 grid max-w-screen-lg grid-cols-2 gap-3 px-4 md:grid-cols-3 md:gap-8'>
  {
    speakersData.map(({ img, name, location, flag }, i) => (
      <SpeakerCard id={i} img={img} name={name} location={location} flag={flag} client:visible />
    ))
  }
</div>
