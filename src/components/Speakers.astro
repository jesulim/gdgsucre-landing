---
import SectionTitle from './SectionTitle.astro'
import speakersData from '../data/speakers.json'
---

<SectionTitle id='speakers' title='Speakers' />
<div
  class='max-w-screen-lg mx-auto grid grid-cols-2 md:grid-cols-3 gap-8 px-4 my-8'
>
  {
    speakersData.map(({ img, name, location }) => (
      <div class='p-4 border-2 border-black bg-white rounded-3xl flex flex-col space-y-4'>
        <img
          src={img}
          alt={name}
          class='mx-auto w-48'
        />

        <div class='mx-auto text-center'>
          <span
            class='text-black font-semibold text-base sm:text-lg md:text-2xl'
          >
            {name}
          </span>
          <p class='font-emoji text-black text-sm sm:text-md md:text-xl'>
            {location}
          </p>
        </div>
      </div>
    ))
  }
</div>
