---
import GdgLogoBw from '../components/logos/GdgLogo_bw.astro'
---

<nav class='bg-black fixed w-full z-20 top-0 left-0 border-b border-gray-600'>
  <div
    class='max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4'
  >
    <GdgLogoBw />
    <div class='flex md:order-2 lg:hidden'>
      <button
        data-collapse-toggle='navbar-sticky'
        type='button'
        class='inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden focus:outline-none focus:ring-2 dark:text-gray-400 hover:bg-gray-700 focus:ring-gray-600'
        aria-controls='navbar-sticky'
        aria-expanded='false'
      >
        <span class='sr-only'>Open main menu</span>
        <svg
          class='w-5 h-5'
          aria-hidden='true'
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 17 14'
        >
          <path
            stroke='currentColor'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M1 1h15M1 7h15M1 13h15'></path>
        </svg>
      </button>
    </div>
    <div
      class='items-center justify-between hidden w-full md:flex md:w-auto md:order-1'
      id='navbar-sticky'
    >
      <ul
        class='flex flex-col p-4 md:p-0 mt-4 font-medium border rounded-lg md:flex-row md:space-x-8 md:mt-0 md:border-0 bg-black md:bg-black border-gray-700'
      >
        <li>
          <a
            href='#'
            class='block hover:text-blue py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500'
            aria-current='page'>Inicio</a
          >
        </li>
        <li>
          <a
            href='#speakers'
            class='block hover:text-yellow py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500'
            >Speakers</a
          >
        </li>
        <li>
          <a
            href='#agenda'
            class='block hover:text-blue py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500'
            >Agenda</a
          >
        </li>

        <li>
          <a
            href='#organizadores'
            class='block hover:text-yellow py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500'
            >Equipo</a
          >
        </li>

        <li>
          <a
            href='#sponsors'
            class='block hover:text-green py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500'
            >Sponsors</a
          >
        </li>

        <li>
          <a
            href='/pastEvents/'
            class='block hover:text-red py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500'
            >Eventos Pasados</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  document
    .querySelector('[data-collapse-toggle]')
    .addEventListener('click', function () {
      const target = document.getElementById(this.getAttribute('aria-controls'))
      const expanded = this.getAttribute('aria-expanded') === 'true' || false

      this.setAttribute('aria-expanded', !expanded)
      target.classList.toggle('hidden')
    })
</script>
