---
import '@fontsource/prompt'
import '@fontsource/noto-color-emoji'
import '@fontsource-variable/sofia-sans'

import Header from '@components/Header.astro'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />

    <!-- HTML Meta Tags -->
    <title>DevFest Sucre 2024</title>
    <meta name='description' content='DevFest Sucre 2024' />

    <!-- Facebook Meta Tags -->
    <meta property='og:url' content='https://www.gdgsucre.com/' />
    <meta property='og:type' content='website' />
    <meta property='og:title' content='DevFest Sucre 2024' />
    <meta property='og:description' content='DevFest Sucre 2024' />
    <meta property='og:image' content=`${Astro.url}opengraph.avif` />
    <meta property='og:image:type' content='image/gif' />

    <!-- Twitter Meta Tags -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta property='twitter:domain' content='www.gdgsucre.com/' />
    <meta property='twitter:url' content='https://www.gdgsucre.com/' />
    <meta name='twitter:title' content='www.gdgsucre.com/' />
    <meta name='twitter:description' content='www.gdgsucre.com/' />
    <meta name='twitter:image' content=`${Astro.url}opengraph.avif` />

    <!-- Load light or dark mode -->
    <script is:inline>
      let theme = localStorage?.getItem('theme')

      if (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches) {
        theme = 'dark'
      }

      if (theme === 'dark') {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }

      window.localStorage.setItem('theme', theme || 'light')
    </script>

    <!-- Google tag (gtag.js) -->
    <script async src='https://www.googletagmanager.com/gtag/js?id=G-BGHRR8BE5R'></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())
      gtag('config', 'G-BGHRR8BE5R')
    </script>
  </head>

  <body
    class='absolute inset-0 -z-10 h-full w-full bg-white font-google dark:bg-black dark:text-white'
  >
    <Header />
    <slot />
    <style>
      :global(html) {
        scroll-behavior: smooth;
      }
      @media (prefers-reduced-motion: reduce) {
        :global(html) {
          scroll-behavior: auto;
        }
      }
      :global(.cut-corners-r) {
        clip-path: polygon(
          calc(100% - 0.6rem) 0%,
          100% 0.6rem,
          100% 100%,
          0.6rem 100%,
          0 calc(100% - 0.6rem),
          0 0
        );
      }

      :global(.cut-corners-l) {
        clip-path: polygon(
          0.6rem 0,
          100% 0,
          100% calc(100% - 0.6rem),
          calc(100% - 0.6rem) 100%,
          0 100%,
          0 0.6rem
        );
      }
    </style>
  </body>
</html>
