---
export const prerender = true

import 'swiper/css'
import 'swiper/css/effect-cards'
import 'swiper/css/pagination'

import PastEvent from '@components/PastEventCard.astro'
import PastEventsHeader from '@components/PastEventsHeader.astro'
import ReturnButton from '@components/ReturnButton.astro'
---

<body
  class='absolute inset-0 -z-10 h-full w-full overflow-y-auto bg-white font-google dark:bg-black dark:text-white'
>
  <PastEventsHeader />
  <div class='mx-auto min-h-screen space-y-12 pt-8 lg:pt-4'>
    <div class='sm:pb-52 md:pb-32 lg:pb-14 xl:pb-16'></div>
    <div class='swiper p-4 md:p-8 lg:p-10'>
      <div class='swiper-wrapper space-x-4 pb-8 md:space-x-6 lg:space-x-8'>
        <div class='swiper-slide'>
          <PastEvent
            title="International Women's Day 2025"
            desktopScreenshot='/screenshots/iwd-2025-desktop.webp'
            mobileScreenshot='/screenshots/iwd-2025-mobile.webp'
            href='https://iwd2025.gdgsucre.com/'
          />
        </div>
        <div class='swiper-slide'>
          <PastEvent
            title='DevFest Sucre 2024'
            desktopScreenshot='/screenshots/devfest-2024-desktop.webp'
            mobileScreenshot='/screenshots/devfest-2024-mobile.webp'
            href='https://devfest2024.gdgsucre.com/'
          />
        </div>
        <div class='swiper-slide'>
          <PastEvent
            title='I/O Extended Sucre 2024'
            desktopScreenshot='/screenshots/io-extended-2024-desktop.webp'
            mobileScreenshot='/screenshots/io-extended-2024-mobile.webp'
            href='https://googleio2024.gdgsucre.com/'
          />
        </div>

        <div class='swiper-slide'>
          <PastEvent
            title="International Women's Day 2024"
            desktopScreenshot='/screenshots/Women-Techmakers-2024-desktop.webp'
            mobileScreenshot='/screenshots/Women-Techmakers-2024-mobile.webp'
            href='https://iwd2024.gdgsucre.com/'
          />
        </div>

        <div class='swiper-slide'>
          <PastEvent
            title='DevFest Sucre 2023'
            desktopScreenshot='/screenshots/devfest-2023-desktop.webp'
            mobileScreenshot='/screenshots/devfest-2023-mobile.webp'
            href='https://devfest2023.gdgsucre.com/'
          />
        </div>

        <div class='swiper-slide'>
          <PastEvent
            title='I/O Extended Sucre 2023'
            desktopScreenshot='/screenshots/io-extended-2023-desktop.webp'
            mobileScreenshot='/screenshots/io-extended-2023-mobile.webp'
            href='https://googleio2023.gdgsucre.com/'
          />
        </div>
      </div>
      <div class='swiper-pagination'></div>
    </div>

    <script>
      import Swiper from 'swiper/bundle'

      new Swiper('.swiper', {
        effect: 'coverflow',
        coverflowEffect: {
          rotate: 20,
          stretch: 0,
          depth: 300,
          modifier: 2,
          slideShadows: true
        },
        mousewheel: {
          invert: true
        },
        keyboard: {
          enabled: true,
          onlyInViewport: false
        },
        autoplay: {
          delay: 4000,
          disableOnInteraction: true
        },
        centeredSlides: true,
        slidesPerView: 1,
        breakpoints: {
          640: {
            slidesPerView: 1
          },
          768: {
            slidesPerView: 2
          },
          1024: {
            slidesPerView: 2
          }
        },
        rewind: true,
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
          renderBullet: function (index, className) {
            return '<span class="' + className + '" style="background-color: #4285f4;"></span>'
          }
        }
      })
    </script>
  </div>
  <ReturnButton href='/' />
</body>
